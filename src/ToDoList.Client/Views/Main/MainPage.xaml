<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.Client.Views.Main.MainPage"
             
             xmlns:MainView="clr-namespace:ToDoList.Client.Views.Main"
             x:DataType="MainView:MainViewModel"
             
             Title="Home">
    
    <VerticalStackLayout Padding="30">
        <Label Text="Welcome,"
               FontSize="34"/>

        <Button Text="Register"
                Margin="0, 10"
                BackgroundColor="LightBlue" 
                Command="{Binding GotoRegisterPageCommand}" />

        <Button Text="Login"
                Margin="0, 10"
                BackgroundColor="LightGreen" 
                Command="{Binding GotoLoginPageCommand}" />

        <Button Text="Note lists"
                Margin="0, 10"
                BackgroundColor="LightCoral" 
                Command="{Binding GotoNoteListPageCommand}" />

    </VerticalStackLayout>
</ContentPage>